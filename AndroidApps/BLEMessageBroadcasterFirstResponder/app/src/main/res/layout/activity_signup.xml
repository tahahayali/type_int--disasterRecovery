<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill out this form:"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Age Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Age"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp"
            android:gravity="start|center_vertical"
            app:icon="@android:drawable/arrow_down_float"
            app:iconGravity="end" />

        <!-- Height Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/heightGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/heightBelowAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Below Average" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/heightAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average"
                android:checked="true" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/heightAboveAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Above Average" />

        </RadioGroup>

        <!-- Weight Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/weightGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/weightBelowAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Below Average" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/weightAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average"
                android:checked="true" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/weightAboveAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Above Average" />

        </RadioGroup>

        <!-- Medical Conditions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Conditions"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/diabetesCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diabetes" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/asthmaCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asthma" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/heartCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart Condition" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/epilepsyCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Epilepsy" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/allergiesCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allergies" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Medical Conditions"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherMedicalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Submit"
            android:textSize="18sp"
            app:cornerRadius="8dp" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

